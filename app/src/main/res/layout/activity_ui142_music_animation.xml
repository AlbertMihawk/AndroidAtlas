<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_all_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_core_142.UI142MusicAnimationActivity">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:scrollbars="none"
            tools:listheader="@layout/item_lv_header"
            tools:listitem="@layout/item_list" />

        <FrameLayout
            android:id="@+id/fl_layout_float"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/ll_layout_float"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/fl_layout_float"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="播放全部"
                    android:textColor="@color/black" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/icon_back"
        app:popupTheme="@style/Widget.AppCompat.PopupMenu"
        app:subtitleTextAppearance="@style/Theme.Toolbar.SubTitle"
        app:titleTextAppearance="@style/Theme.Toolbar.Title" />


</FrameLayout>